<h1><%= 'Edit Question'[] %></h1>

<%= error_messages_for :question %>
<% form_for :question,
     :url  => question_path(@category, @question),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<br />
<%= submit_tag 'Save Changes'[], :or => link_to('Cancel'[], question_path(@category, @question)) %>
<% end -%>