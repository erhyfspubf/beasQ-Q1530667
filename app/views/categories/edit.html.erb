<div class="crumbs">
  <%= link_to 'Categories'[:categories_title], home_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= 'Edit Category'[:edit_category] %></h1>

<% form_for :category,
     :url  => category_path(@category),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag 'Save Category'[:save_category], :or => link_to('Cancel'[:cancel], categories_path) %>
<% end -%>